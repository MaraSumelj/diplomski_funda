<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="status_following">
				<%= render 'shared/status_following' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Novosti</h3>
			<%= render 'shared/news' %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
	<h1>Dobrodošli!</h1>
	<h2>
	Ovo je početna stranica aplikacije Funda.
	</h2>
	<%= link_to "Registrirajte se!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>