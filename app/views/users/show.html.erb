<% @user.name %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<% if current_user?(@user) %>
				<section class="status_following">
				<%= render 'shared/status_following' %>
				</section>
			<%end%>
		</section>
	</aside>

	<div class="col-md-8">
	<% if current_user?(@user) %>
	 	<h3>Moje objave</h3>
	 	<% if @feed_items.any? %>
	 		<%= render 'shared/news' %>
	 	<%else%>
	 		<p> Nemate objava na stranicama kolegija na koje ste pretplaćeni.  </p>	
	 	<%end%>
	<%else%>
		<h3> Objave korisnika <%= @user.name %> na stranicama kolegija na koje ste pretplaćeni</h3>
		<% if @feed_items.any? %>
		  <%= render 'shared/news' %>
		<%else%>
		  <p> Korisnik nije objavljivao na stranicama na koje ste Vi pretplaćeni. </p>
		<%end%>
	<%end%>
		
	</div>
</div>
